WHITESPACE = _{" " | "\t"}
new_line = _{ "\r\n" | "\n"}
input_select = {"imm" | "addr" | "pc" | "mem"}
output_select = {"acc" | "addr" | "pc" | "mem"}
opcode = {"copy" | "copy_acc" | "add" | "add3_if_acc_0_else_1"}
constant = {ASCII_HEX_DIGIT*}
instruction = {!"#" ~ opcode ~ input_select ~ output_select ~ constant? }
comment = { "#" ~ (!new_line ~ ANY)* }
line = {instruction | comment }
program = { (line  ~ new_line)* }